@model IEnumerable<Product>
@{
    ViewData["Title"] = "Sprava Produktu";
}

<!-- include modals -->
@Html.Partial("ProductAddModal")
@Html.Partial("ProductEditModal")


<!-- Products manage Section -->
<section class="mt-5 py-5" data-aos="fade-up">
    <div class="container">
        <div class="row justify-content-center mb-12">
            <div class="col-xl-10 col-xl-12">
                <div class="card shadow-sm mb-3 p-3" style="min-height: 85vh;">
                    <!-- Add Product Button -->
                    <div class="py-3 container text-end">
                        <input type="button" data-bs-toggle="modal" class="btn btn-warning mb-4 btn-lg" value="Add Product" data-bs-target="#addproductModal">
                    </div>
                    
                    <!-- Product Table -->
                    <table class="table table-hover">
                        <thead>
                            <tr id="product_management_table_row_0">
                                <th scope="col">Product ID</th> 
                                <th scope="col">Name</th> 
                                <th scope="col">Quantity</th> 
                                <th scope="col">Price</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <!-- Products List -->
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr class="align-middle">
                                    <th scope="row">@p.Id</th>
                                    <td>@p.Nazev</td>
                                    <td>@p.Mnozstvi</td>
                                    <td>@p.Cena Kč</td>
                                    <!-- Edit Button -->
                                    <td>
                                        <button class="btn btn-link text-warning fw-bold edit-product-btn"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editProductModal"
                                                data-product-id="@p.Id">
                                            <i class="bi bi-wrench"></i>
                                        </button>
                                    </td>
                                    
                                    <!-- Delete Button -->
                                    <td>
                                        <button type="button" class="btn btn-link text-danger fw-bold delete-product-btn" data-product-id="@p.Id">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
